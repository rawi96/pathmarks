{
  "manifest_version": 3,
  "name": "Pathmarks",
  "version": "1.0.0",
  "description": "Create shortcuts to important paths and switch environments with one click.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icons/icon128.png"
  },
  "options_page": "options.html",
  "permissions": ["tabs", "storage"],
  "icons": {
    "128": "icons/icon128.png"
  }
}